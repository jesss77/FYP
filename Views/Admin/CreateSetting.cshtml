@model FYP.Models.Settings
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<FYP.Localization.SharedResource> L
@{
    ViewData["Title"] = L["Create Setting"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-custom" style="padding: var(--spacing-2xl) var(--spacing-lg); max-width: 800px; margin: 0 auto;">
    <partial name="~/Views/Shared/_BackButton.cshtml" model="@Url.Action("Settings","Admin")" />

    <div class="card shadow-sm" style="background: var(--bg-card); border: 1px solid var(--border-primary); border-radius: var(--radius-xl);">
        <div class="card-header" style="border-bottom: 1px solid var(--border-primary); padding: var(--spacing-xl);">
            <h3 class="mb-0 gold-heading" style="font-size: 1.75rem;">@ViewData["Title"]</h3>
        </div>

        <div class="card-body" style="padding: var(--spacing-2xl);">
            <form asp-action="CreateSetting" asp-controller="Admin" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Key" class="form-label fw-semibold"></label>
                    <input asp-for="Key" class="form-control" placeholder="Enter setting key" />
                    <span asp-validation-for="Key" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Value" class="form-label fw-semibold"></label>
                    <textarea asp-for="Value" class="form-control" rows="4" placeholder="Enter setting value"></textarea>
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between gap-3">
                    <a class="btn btn-secondary flex-fill" href="@Url.Action("Settings", "Admin")">
                        <span class="material-symbols-outlined" style="vertical-align: middle; margin-right: 0.5rem;">arrow_back</span>
                        @L["Cancel"]
                    </a>
                    <button type="submit" class="btn btn-primary flex-fill">
                        <span class="material-symbols-outlined" style="vertical-align: middle; margin-right: 0.5rem;">save</span>
                        @L["Create Setting"]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
