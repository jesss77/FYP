@model FYP.Controllers.AdminController.EditEmployeeViewModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<FYP.Localization.SharedResource> L
@{
    var role = (string)ViewBag.Role ?? "employee";
    ViewData["Title"] = role == "manager" ? L["Edit Manager"] : L["Edit Employee"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-custom" style="padding: var(--spacing-2xl) var(--spacing-lg); max-width: 800px; margin: 0 auto;">
    <partial name="~/Views/Shared/_BackButton.cshtml" model="@Url.Action("ManageUsers","Admin", new { category = role == "manager" ? "managers" : "employees" })" />

    <div class="card shadow-sm" style="background: var(--bg-card); border: 1px solid var(--border-primary); border-radius: var(--radius-xl);">
        <div class="card-header" style="border-bottom: 1px solid var(--border-primary);">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="EditUser" asp-controller="Admin" method="post">
                <input type="hidden" asp-for="EmployeeID" />
                <input type="hidden" name="role" value="@role" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 mt-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a class="btn btn-secondary" href="@Url.Action("ManageUsers","Admin", new { category = role == "manager" ? "managers" : "employees" })">@L["Back"]</a>
                    <button type="submit" class="btn btn-primary">@L["Save"]</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
