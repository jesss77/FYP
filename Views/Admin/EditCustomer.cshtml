@model FYP.Models.Customer
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<FYP.Localization.SharedResource> L
@{
    ViewData["Title"] = L["Edit Customer"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-custom" style="padding: var(--spacing-2xl) var(--spacing-lg); max-width: 800px; margin: 0 auto;">
    <partial name="~/Views/Shared/_BackButton.cshtml" model="@Url.Action("ManageUsers","Admin", new { category = "customers" })" />

    <div class="card shadow-sm" style="background: var(--bg-card); border: 1px solid var(--border-primary); border-radius: var(--radius-xl);">
        <div class="card-header" style="border-bottom: 1px solid var(--border-primary);">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="EditCustomer" asp-controller="Admin" method="post">
                <input type="hidden" asp-for="CustomerID" />
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row g-3 mt-1">
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PreferredLanguage" class="form-label"></label>
                        <input asp-for="PreferredLanguage" class="form-control" />
                        <span asp-validation-for="PreferredLanguage" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <a class="btn btn-secondary" href="@Url.Action("ManageUsers","Admin", new { category = "customers" })">@L["Back"]</a>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">@L["Save"]</button>

                        @* Activate/Deactivate button (follows existing toggle pattern used for employees) *@
                        @if (Model != null)
                        {
                            var toggleText = Model.IsActive ? L["Deactivate"] : L["Activate"];
                            var toggleIcon = Model.IsActive ? "pause" : "play_arrow";
                            <a class="btn @(Model.IsActive ? "btn-outline-secondary" : "btn-outline-success")"
                               href="@Url.Action("ToggleCustomerStatus", "Admin", new { id = Model.CustomerID })"
                               onclick="return confirm('@L["Are you sure you want to {0} this customer?", toggleText]');">
                                <span class="material-symbols-outlined" style="vertical-align: middle; margin-right: 0.25rem;">@toggleIcon</span>
                                @toggleText
                            </a>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
