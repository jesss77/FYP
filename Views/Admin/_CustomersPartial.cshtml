@model IEnumerable<FYP.Models.Customer>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<FYP.Localization.SharedResource> L

@{
    var stats = new List<FYP.ViewModels.AdminStatViewModel>();
    if (Model != null)
    {
        stats.Add(new FYP.ViewModels.AdminStatViewModel { Icon = "person", Number = Model.Count().ToString(), Label = L["Total Customers"], ColorClass = "stat-cube-green", Link = Url.Action("ManageUsers", "Admin", new { category = "customers" }) });
    }
}

<div class="user-section">
    <!-- Header with action (search lives at ManageUsers header) -->
    <div class="d-flex justify-content-between align-items-center" style="margin-bottom: var(--spacing-2xl); gap:var(--spacing-md);">
        <div class="stats-row-container" style="margin-bottom: 0;">
            @foreach (var s in stats)
            {
                @Html.Partial("~/Views/Shared/_StatCube.cshtml", s)
            }
        </div>
       
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Table -->
        <div class="users-table-container" style="margin-top: var(--spacing-xl);">
            <table class="users-table">
                <thead>
                    <tr>
                        <th style="padding: var(--spacing-lg) var(--spacing-xl);">@L["Name"]</th>
                        <th style="padding: var(--spacing-lg) var(--spacing-xl);">@L["Email"]</th>
                        <th style="padding: var(--spacing-lg) var(--spacing-xl);">@L["Phone"]</th>
                        <th style="padding: var(--spacing-lg) var(--spacing-xl);">@L["Joined"]</th>
                        <th class="text-end" style="padding: var(--spacing-lg) var(--spacing-xl);">@L["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.OrderBy(c => c.FirstName))
                    {
                        <tr>
                            <td class="user-name" style="padding: var(--spacing-lg) var(--spacing-xl);">@c.FirstName @c.LastName</td>
                            <td class="user-email" style="padding: var(--spacing-lg) var(--spacing-xl);">@c.Email</td>
                            <td style="padding: var(--spacing-lg) var(--spacing-xl);">@(c.PhoneNumber ?? L["Not provided"])</td>
                            <td style="padding: var(--spacing-lg) var(--spacing-xl);">@c.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td class="text-end" style="padding: var(--spacing-lg) var(--spacing-xl);">
                                <div class="action-buttons">
                                    <a class="action-btn action-edit" href="@Url.Action("EditCustomer", "Admin", new { id = c.CustomerID })" title="@L["Edit"]">
                                        <span class="material-symbols-outlined">edit</span>
                                        @L["Edit"]
                                    </a>
                                    <button class="action-btn action-delete" 
                                            onclick="if(confirm('@L["Are you sure you want to delete {0} {1}? This action cannot be undone.", c.FirstName, c.LastName]')) window.location.href='@Url.Action("DeleteUser", "Admin", new { id = c.CustomerID, role = "customer" })'"
                                            title="@L["Delete"]">
                                        <span class="material-symbols-outlined">delete</span>
                                        @L["Delete"]
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state" style="margin-top: var(--spacing-2xl); padding: var(--spacing-3xl) var(--spacing-2xl);">
            <span class="material-symbols-outlined empty-state-icon">person_off</span>
            <h3 style="margin-top: var(--spacing-xl); margin-bottom: var(--spacing-md);">@L["No Customers Yet"]</h3>
            <p style="margin-bottom: var(--spacing-xl);">@L["Customers will appear here once they register."]</p>
        </div>
    }
</div>
