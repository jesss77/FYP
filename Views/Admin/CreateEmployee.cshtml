@model FYP.Controllers.AdminController.CreateEmployeeViewModel
@{
    ViewData["Title"] = "Add New Employee";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-dark text-warning">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>

        <div class="card-body bg-dark text-light">
            <form asp-action="CreateEmployee" asp-controller="Admin" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control bg-transparent text-light border-warning" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" class="form-control bg-transparent text-light border-warning" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label fw-semibold"></label>
                    <input asp-for="FirstName" class="form-control bg-transparent text-light border-warning" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="form-label fw-semibold"></label>
                    <input asp-for="LastName" class="form-control bg-transparent text-light border-warning" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                    <input asp-for="PhoneNumber" class="form-control bg-transparent text-light border-warning" type="tel" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a class="btn btn-secondary" href="@Url.Action("Employees", "Admin")">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
