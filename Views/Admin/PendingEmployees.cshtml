@model IEnumerable<FYP.Models.Employee>
@{
    ViewData["Title"] = "Pending Employees";
}

<div class="content-container">
    <h1 class="gold-heading">Pending Employees</h1>
    <hr class="gold-hr" />

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info">@TempData["Info"]</div>
    }

    @if (!Model.Any())
    {
        <p>No pending employees at the moment.</p>
    }
    else
    {
        <div class="table-container mt-4">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Registered At</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.FirstName @emp.LastName</td>
                            <td>@emp.Email</td>
                            <td>@emp.CreatedAt.ToLocalTime().ToString("g")</td>
                            <td>
                                <a class="btn btn-secondary btn-sm"
                                   href="@Url.Action("ApproveEmployee", "Admin", new { id = emp.EmployeeID })">
                                    Approve
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">Back to Dashboard</a>
    </div>
</div>
