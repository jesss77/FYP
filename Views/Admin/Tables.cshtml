@model IEnumerable<FYP.Models.Table>
@{
    ViewData["Title"] = "Tables";
}

<div class="container mt-5 table-container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info">@TempData["Info"]</div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="gold-heading mb-0">@ViewData["Title"]</h2>
        <a class="btn btn-primary" href="@Url.Action("CreateTable", "Admin")">
            <i class="bi bi-plus-circle"></i> Add New Table
        </a>
    </div>

    <table class="table table-dark table-hover align-middle">
        <thead>
            <tr>
                <th>Table Number</th>
                <th>Capacity</th>
                <th>Joinable</th>
                <th>Status</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var table in Model)
            {
                <tr>
                    <td>@table.TableNumber</td>
                    <td>@table.Capacity</td>
                    <td>
                        @if (table.IsJoinable)
                        {
                            <span class="badge bg-info">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </td>
                    <td>
                        @if (table.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Unavailable</span>
                        }
                    </td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-warning me-1" href="@Url.Action("EditTable", "Admin", new { id = table.TableID })">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        @if (table.IsAvailable)
                        {
                            <a class="btn btn-sm btn-secondary me-1" href="@Url.Action("ToggleTableAvailability", "Admin", new { id = table.TableID })">
                                <i class="bi bi-pause-circle"></i> Make Unavailable
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-sm btn-success me-1" href="@Url.Action("ToggleTableAvailability", "Admin", new { id = table.TableID })">
                                <i class="bi bi-play-circle"></i> Make Available
                            </a>
                        }
                        <a class="btn btn-sm btn-danger" href="@Url.Action("DeleteTable", "Admin", new { id = table.TableID })"
                           onclick="return confirm('Are you sure you want to delete Table @table.TableNumber? This action cannot be undone.');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
