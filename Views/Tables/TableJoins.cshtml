@model IEnumerable<FYP.Models.TablesJoin>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<FYP.Localization.SharedResource> L
@{
    ViewData["Title"] = "Table Joins";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tables = ViewBag.Tables as List<FYP.Models.Table> ?? new List<FYP.Models.Table>();
}

<div class="container-custom" style="padding: var(--spacing-2xl) var(--spacing-lg); max-width: 1200px; margin: 0 auto;">
    <partial name="~/Views/Shared/_BackButton.cshtml" model="@Url.Action("Tables", "Tables")" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="gold-heading">Manage Table Joins</h1>
    </div>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card mb-4">
        <div class="card-body">
            @{ var maxJoinable = tables.Count(t => t.IsJoinable); }
            <form asp-controller="Tables" asp-action="CreateTableJoin" method="post" class="row g-3" id="joinForm">
                @Html.AntiForgeryToken()
                <div class="col-md-4">
                    <label class="form-label">Primary Table</label>
                    <select name="primaryTableId" class="form-select form-select-sm" required>
                        <option value="">Select</option>
                        @foreach (var t in tables)
                        {
                            <option value="@t.TableID">Table @t.TableNumber (capacity @t.Capacity)</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Joined Table</label>
                    <select name="joinedTableId" class="form-select form-select-sm" required>
                        <option value="">Select</option>
                        @foreach (var t in tables)
                        {
                            <option value="@t.TableID">Table @t.TableNumber (@t.Capacity)</option>
                        }
                    </select>
                </div>

                <div class="col-md-2 d-flex align-items-end ms-auto">
                    <button type="submit" class="btn btn-primary">Create Join</button>
                </div>
            </form>
        </div>
    </div>

    

    <div class="card">
        <div class="card-body">
            <h5>Existing Joins</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Primary</th>
                        <th>Joined</th>
                        <th>Total Capacity</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var j in Model)
                    {
                        <tr>
                            <td>Table @j.PrimaryTable.TableNumber</td>
                            <td>Table @j.JoinedTable.TableNumber</td>
                            <td>@j.TotalCapacity</td>
                            <td>
                                <a asp-controller="Tables" asp-action="DeleteTableJoin" asp-route-id="@j.TablesJoinID" class="btn btn-sm btn-danger" onclick="return confirm('Delete join?');">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
