@{
    ViewData["Title"] = "Reservations Calendar";
    var selectedDate = ViewData["SelectedDate"] as DateTime? ?? DateTime.UtcNow.Date;
}

<div class="container-custom" style="padding: var(--spacing-2xl) var(--spacing-lg); max-width: 1400px; margin: 0 auto;">
    <!-- Header with View Toggle -->
    <div style="margin-bottom: var(--spacing-2xl);">
        <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: var(--spacing-md);">
            <h1 class="gold-heading" style="font-size: 2rem; margin: 0;">
                Reservations Calendar
            </h1>
            <div style="display: flex; gap: var(--spacing-sm); flex-wrap: wrap; align-items-center;">
                <!-- View Toggle -->
                <div class="btn-group" role="group">
                    <a asp-controller="Reservations" asp-action="Index" class="btn btn-secondary" style="border-radius: var(--radius-md) 0 0 var(--radius-md);">
                        <span class="material-symbols-outlined" style="font-size: 1.125rem;">list</span>
                        List
                    </a>
                    <a asp-controller="Reservations" asp-action="Calendar" class="btn btn-primary" style="border-radius: 0 var(--radius-md) var(--radius-md) 0;">
                        <span class="material-symbols-outlined" style="font-size: 1.125rem;">calendar_view_month</span>
                        Calendar
                    </a>
                </div>
                <a asp-controller="Reservations" asp-action="CreateWalkIn" class="btn btn-gold">
                    <span class="material-symbols-outlined" style="font-size: 1.125rem; margin-right: var(--spacing-xs);">person_add</span>
                    New Walk-In
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger" style="margin-bottom: var(--spacing-xl); border-radius: var(--radius-lg);">@TempData["Error"]</div>
    }
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success" style="margin-bottom: var(--spacing-xl); border-radius: var(--radius-lg);">@TempData["Message"]</div>
    }

    <!-- Date Picker -->
    <div style="background: var(--bg-card); border: 1px solid var(--border-primary); border-radius: var(--radius-lg); padding: var(--spacing-lg); margin-bottom: var(--spacing-xl);">
        <form asp-controller="Reservations" asp-action="Calendar" method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="date" class="form-label" style="font-weight: 600; color: var(--text-primary);">Select Date</label>
                <input type="date" name="date" id="date" class="form-control" 
                       style="padding: 0.875rem 1rem; border: 2px solid var(--border-primary); border-radius: var(--radius-md); background: var(--bg-secondary); color: var(--text-primary);"
                       value="@selectedDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-secondary w-100">
                    <span class="material-symbols-outlined" style="font-size: 1.125rem; margin-right: var(--spacing-xs);">search</span>
                    Go
                </button>
            </div>
        </form>
    </div>

    <!-- Status Legend -->
    <div style="background: var(--bg-card); border: 1px solid var(--border-primary); border-radius: var(--radius-lg); padding: var(--spacing-md) var(--spacing-lg); margin-bottom: var(--spacing-xl);">
        <div style="display: flex; flex-wrap: wrap; gap: var(--spacing-md); align-items: center;">
            <span style="font-weight: 600; color: var(--text-primary);">Status:</span>
            <span class="status-badge event-confirmed-badge">Confirmed</span>
            <span class="status-badge event-seated-badge">Seated</span>
            <span class="status-badge event-completed-badge">Completed</span>
            <span class="status-badge event-cancelled-badge">Cancelled</span>
        </div>
    </div>

    <!-- Calendar -->
    <div style="background: var(--bg-card); border: 1px solid var(--border-primary); border-radius: var(--radius-lg); padding: var(--spacing-lg); box-shadow: var(--shadow-lg);">
        <div class="calendar-scroll-wrapper">
            <div id="reservationCalendar"></div>
        </div>
    </div>

    <!-- Reservation Detail Modal -->
    <div class="modal fade reservation-modal" id="reservationDetailModal" tabindex="-1" aria-labelledby="reservationDetailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="reservationDetailModalLabel">Reservation Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <dl class="row">
                        <dt class="col-sm-4">Guest</dt>
                        <dd class="col-sm-8" id="modalGuestName"></dd>

                        <dt class="col-sm-4">Party Size</dt>
                        <dd class="col-sm-8" id="modalPartySize"></dd>

                        <dt class="col-sm-4">Current Table(s)</dt>
                        <dd class="col-sm-8" id="modalTable"></dd>

                        <dt class="col-sm-4">Time</dt>
                        <dd class="col-sm-8" id="modalTime"></dd>

                        <dt class="col-sm-4">Duration</dt>
                        <dd class="col-sm-8" id="modalDuration"></dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8"><span class="status-badge" id="modalStatusBadge"></span></dd>
                    </dl>

                    <!-- Action Buttons Section -->
                    <div style="margin-top: 1.5rem; padding-top: 1.5rem; border-top: 2px solid var(--border-primary);">
                        <h6 style="color: var(--text-primary); margin-bottom: 0.75rem; font-weight: 600;">
                            <span class="material-symbols-outlined" style="vertical-align: middle; font-size: 1.25rem; margin-right: 0.5rem;">settings</span>
                            Reservation Actions
                        </h6>

                        <div class="d-grid gap-2">
                            <!-- Change Table Button (Always Visible) -->
                            <button type="button" class="btn btn-lg btn-outline-primary" id="btnShowChangeTable">
                                <span class="material-symbols-outlined" style="vertical-align: middle; font-size: 1.25rem; margin-right: 0.5rem;">swap_horiz</span>
                                Change Assigned Table
                            </button>

                            <!-- Status Action Buttons Container -->
                            <div id="statusActionButtons" class="d-grid gap-2"></div>
                        </div>
                    </div>

                    <!-- Change Table Section (Initially Hidden) -->
                    <div id="changeTableSection" style="display: none; margin-top: 1rem; padding: 1rem; background: rgba(212, 175, 55, 0.05); border: 2px dashed var(--color-primary-gold); border-radius: 0.75rem;">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="mb-0" style="color: var(--color-primary-gold); font-weight: 700;">
                                <span class="material-symbols-outlined" style="vertical-align: middle; font-size: 1.25rem; margin-right: 0.5rem;">swap_horiz</span>
                                Select New Table Assignment
                            </h6>
                            <button type="button" class="btn btn-sm btn-outline-secondary" id="btnCancelChangeTable">
                                <span class="material-symbols-outlined" style="vertical-align: middle; font-size: 1rem;">close</span>
                                Cancel
                            </button>
                        </div>

                        <div class="alert alert-info d-flex align-items-start mb-3" style="font-size: 0.9rem;">
                            <span class="material-symbols-outlined" style="vertical-align: middle; font-size: 1.5rem; margin-right: 0.75rem; flex-shrink: 0;">info</span>
                            <span>Only tables available during this reservation's time slot will be displayed below.</span>
                        </div>

                        <form id="changeTableForm" method="post" asp-controller="Employee" asp-action="ChangeAssignedTable">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="reservationId" id="changeTableReservationId" />
                            <input type="hidden" id="reservationDate" />
                            <input type="hidden" id="reservationTime" />
                            <input type="hidden" id="reservationDuration" />

                            <div class="mb-3">
                                <label for="tableSelection" class="form-label fw-bold">
                                    <span class="material-symbols-outlined" style="vertical-align: middle; font-size: 1.125rem; margin-right: 0.25rem;">table_restaurant</span>
                                    Select Available Table
                                </label>
                                <select name="tableSelection" id="tableSelection" class="form-select form-select-lg" required>
                                    <option value="">-- Loading available tables... --</option>
                                </select>
                                <div class="form-text mt-2">
                                    <span class="material-symbols-outlined" style="vertical-align: middle; font-size: 1rem; margin-right: 0.25rem;">schedule</span>
                                    Tables are filtered based on the reservation's date, time, and duration
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-lg btn-primary">
                                    <span class="material-symbols-outlined" style="vertical-align: middle; font-size: 1.25rem; margin-right: 0.5rem;">check_circle</span>
                                    Confirm Table Change
                                </button>
                                <button type="button" class="btn btn-outline-secondary" id="btnCancelChangeTable2">
                                    <span class="material-symbols-outlined" style="vertical-align: middle; font-size: 1rem; margin-right: 0.25rem;">close</span>
                                    Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

