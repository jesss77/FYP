@section Scripts {
    <script>
        const resourcesJsonString = '@Html.Raw(ViewData["ResourcesJson"])';
        const eventsJsonString = '@Html.Raw(ViewData["EventsJson"])';
        const businessDayStart = '@(ViewData["BusinessDayStart"] ?? "09:00:00")';
        const businessDayEnd = '@(ViewData["BusinessDayEnd"] ?? "22:00:00")';
        const selectedDateStr = '@selectedDate.ToString("yyyy-MM-dd")';

        let resourcesData, eventsData;

        try {
            resourcesData = JSON.parse(resourcesJsonString);
            eventsData = JSON.parse(eventsJsonString);
        } catch (e) {
            console.error('JSON parsing error:', e);
        }

        document.addEventListener('DOMContentLoaded', function() {
            const calendarEl = document.getElementById('reservationCalendar');
            const modalElement = document.getElementById('reservationDetailModal');
            const reservationModal = new bootstrap.Modal(modalElement);
            let currentReservationId = null;
            let currentReservationData = null;

            if (!calendarEl) {
                console.error('Calendar element not found!');
                return;
            }

            // Change Table UI Handlers
            const btnShowChangeTable = document.getElementById('btnShowChangeTable');
            const btnCancelChangeTable = document.getElementById('btnCancelChangeTable');
            const btnCancelChangeTable2 = document.getElementById('btnCancelChangeTable2');
            const changeTableSection = document.getElementById('changeTableSection');

            if (btnShowChangeTable) {
                btnShowChangeTable.addEventListener('click', function () {
                    changeTableSection.style.display = 'block';
                    btnShowChangeTable.style.display = 'none';
                    loadAvailableTables();
                });
            }

            function hideChangeTable() {
                changeTableSection.style.display = 'none';
                if (btnShowChangeTable) btnShowChangeTable.style.display = 'block';
            }

            if (btnCancelChangeTable) {
                btnCancelChangeTable.addEventListener('click', hideChangeTable);
            }

            if (btnCancelChangeTable2) {
                btnCancelChangeTable2.addEventListener('click', hideChangeTable);
            }

            async function loadAvailableTables() {
                if (!currentReservationData) return;

                const tableSelect = document.getElementById('tableSelection');
                tableSelect.innerHTML = '<option value="">Loading available tables...</option>';

                try {
                    const url = `/ReservationCalendar/GetAvailableTables?date=${encodeURIComponent(currentReservationData.date)}&time=${encodeURIComponent(currentReservationData.time)}&duration=${currentReservationData.duration}&currentReservationId=${currentReservationId}`;
                    const response = await fetch(url);
                    const data = await response.json();

                    if (data.success) {
                        tableSelect.innerHTML = '<option value="">-- Select a table --</option>';

                        if (data.singleTables && data.singleTables.length > 0) {
                            const singleGroup = document.createElement('optgroup');
                            singleGroup.label = 'Single Tables';
                            data.singleTables.forEach(table => {
                                const option = document.createElement('option');
                                option.value = `single_${table.id}`;
                                option.textContent = `Table ${table.number} (Capacity: ${table.capacity})`;
                                singleGroup.appendChild(option);
                            });
                            tableSelect.appendChild(singleGroup);
                        }

                        if (data.joinedTables && data.joinedTables.length > 0) {
                            const joinedGroup = document.createElement('optgroup');
                            joinedGroup.label = 'Joined Tables';
                            data.joinedTables.forEach(join => {
                                const option = document.createElement('option');
                                option.value = `joined_${join.primaryId}_${join.joinedId}`;
                                option.textContent = `Tables ${join.primaryNumber} + ${join.joinedNumber} (Total Capacity: ${join.totalCapacity})`;
                                joinedGroup.appendChild(option);
                            });
                            tableSelect.appendChild(joinedGroup);
                        }

                        if ((!data.singleTables || data.singleTables.length === 0) && (!data.joinedTables || data.joinedTables.length === 0)) {
                            tableSelect.innerHTML = '<option value="">No tables available for this time slot</option>';
                        }
                    } else {
                        tableSelect.innerHTML = '<option value="">Error loading tables</option>';
                        console.error('Error loading tables:', data.message);
                    }
                } catch (error) {
                    tableSelect.innerHTML = '<option value="">Error loading tables</option>';
                    console.error('Error fetching available tables:', error);
                }
            }

            function onEventClick(info) {
                var event = info.event;
                currentReservationId = event.id;

                // For multiple tables (if you use resources), adapt as needed
                var tableDisplay = event.extendedProps.tableDisplay || 'N/A';

                // Calculate duration in minutes
                var durationMinutes = Math.round((event.end - event.start) / (1000 * 60));

                currentReservationData = {
                    date: event.start.toISOString().split('T')[0],
                    time: event.start.toTimeString().split(' ')[0].substring(0, 5),
                    duration: durationMinutes
                };

                document.getElementById('reservationDate').value = currentReservationData.date;
                document.getElementById('reservationTime').value = currentReservationData.time;
                document.getElementById('reservationDuration').value = currentReservationData.duration;

                document.getElementById('modalGuestName').textContent = event.title;
                document.getElementById('modalPartySize').textContent = event.extendedProps.partySize || '';
                document.getElementById('modalTable').textContent = tableDisplay;
                document.getElementById('modalTime').textContent =
                    event.start.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) +
                    ' - ' +
                    event.end.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                document.getElementById('modalDuration').textContent = durationMinutes + ' minutes';
                document.getElementById('modalStatusBadge').textContent = event.extendedProps.status || '';

                document.getElementById('changeTableReservationId').value = currentReservationId;
                hideChangeTable();
                document.getElementById('tableSelection').innerHTML = '<option value="">-- Select a table --</option>';

                renderStatusButtons(event.extendedProps.status, event.extendedProps.isWalkIn);
                reservationModal.show();
            }

            function renderStatusButtons(status, isWalkIn) {
                const container = document.getElementById('statusActionButtons');
                container.innerHTML = '';

                const actions = [];

                if (status === 'Confirmed') {
                    actions.push({
                        label: 'Mark as Seated',
                        icon: 'event_seat',
                        statusId: 3,
                        confirmText: 'Are you sure the table is seated?',
                        variant: 'success'
                    });
                }

                if (status === 'Seated') {
                    actions.push({
                        label: 'Mark as Completed',
                        icon: 'check_circle',
                        statusId: 4,
                        confirmText: 'Are you sure the reservation is completed?',
                        variant: 'info'
                    });
                }

                if (status === 'Confirmed') {
                    actions.push({
                        label: 'Cancel Reservation',
                        icon: 'cancel',
                        statusId: 5,
                        confirmText: 'Are you sure you want to cancel this reservation?',
                        variant: 'danger'
                    });
                }

                if (actions.length === 0) {
                    container.innerHTML = '<p class="text-muted mb-0 text-center" style="font-size: 0.875rem; font-style: italic;">No status changes available for this reservation.</p>';
                    return;
                }

                actions.forEach(action => {
                    const btn = document.createElement('button');
                    btn.type = 'button';
                    btn.className = `btn btn-${action.variant || 'primary'}`;
                    btn.innerHTML = `<span class="material-symbols-outlined" style="vertical-align: middle; font-size: 1.25rem; margin-right: 0.5rem;">${action.icon}</span>${action.label}`;
                    btn.addEventListener('click', function () {
                        if (confirm(action.confirmText)) {
                            document.getElementById('statusReservationId').value = currentReservationId;
                            document.getElementById('statusIdField').value = action.statusId;
                            document.getElementById('statusUpdateForm').submit();
                        }
                    });
                    container.appendChild(btn);
                });
            }

            // Initialize FullCalendar
            try {
                var calendar = new FullCalendar.Calendar(calendarEl, {
                    schedulerLicenseKey: 'GPL-My-Project-Is-Open-Source',
                    initialView: 'resourceTimeGridDay',
                    initialDate: selectedDateStr,

                    resources: resourcesData,
                    events: eventsData,

                    headerToolbar: {
                        left: 'today',
                        center: 'title',
                        right: ''
                    },
                    customButtons: {
                        today: {
                            text: 'Today',
                            click: function() { calendar.today(); }
                        }
                    },
                    resourceLabelDidMount: function(info) {
                        var capacity = info.resource.extendedProps.capacity;
                        if (capacity) {
                            info.el.setAttribute('title', 'Capacity: ' + capacity);
                        }
                    },

                    slotMinTime: businessDayStart,
                    slotMaxTime: businessDayEnd,
                    slotDuration: '00:30:00',
                    height: 700,
                    allDaySlot: false,
                    resourceOrder: 'order',

                    eventClick: onEventClick,

                    eventDidMount: function(info) {
                        var className = info.event.extendedProps.className || info.event.classNames[0];
                        if (className) {
                            info.el.classList.add(className);
                        }
                    }
                });

                calendar.render();
                console.log('Calendar rendered successfully');

            } catch (e) {
                console.error('Calendar initialization error:', e);
                calendarEl.innerHTML = '<div class="alert alert-danger">Error loading calendar: ' + e.message + '</div>';
            }
        });
    </script>
}
