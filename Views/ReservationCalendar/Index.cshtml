@{
    ViewData["Title"] = "Reservation Schedule";
    var selectedDate = ViewData["SelectedDate"] as DateTime? ?? DateTime.UtcNow.Date;
}

<div class="container mt-5">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
        <h2 class="gold-heading mb-0">Reservation Schedule</h2>
        <div class="d-flex gap-2 flex-wrap align-items-center">
            <div class="btn-group" role="group" aria-label="View toggle">
                <a asp-controller="ReservationCalendar" asp-action="Index" class="btn btn-primary active">
                    <i class="bi bi-calendar3"></i> Calendar
                </a>
                <a asp-controller="Employee" asp-action="Reservations" class="btn btn-outline-primary">
                    <i class="bi bi-list-ul"></i> List
                </a>
            </div>
            <a asp-controller="Employee" asp-action="CreateWalkIn" class="btn btn-success">
                <i class="bi bi-person-plus"></i> New Walk-In
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <!-- Date Picker -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="date" class="form-label">Select Date</label>
                    <input type="date" name="date" id="date" class="form-control" 
                           value="@selectedDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-secondary w-100">Go</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Status Legend -->
    <div class="card mb-4">
        <div class="card-body py-2">
            <div class="d-flex flex-wrap gap-3 align-items-center">
                <span class="fw-semibold me-2">Status:</span>
                <span class="status-badge event-confirmed-badge">Confirmed</span>
                <span class="status-badge event-seated-badge">Seated</span>
                <span class="status-badge event-completed-badge">Completed</span>
            </div>
        </div>
    </div>

    <!-- Calendar -->
    <div class="card">
        <div class="card-body">
            <div class="calendar-scroll-wrapper">
                <div id="reservationCalendar"></div>
            </div>
        </div>
    </div>

    <!-- Reservation Detail Modal -->
    <div class="modal fade reservation-modal" id="reservationDetailModal" tabindex="-1" aria-labelledby="reservationDetailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="reservationDetailModalLabel">Reservation Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <dl class="row">
                        <dt class="col-sm-4">Guest</dt>
                        <dd class="col-sm-8" id="modalGuestName"></dd>

                        <dt class="col-sm-4">Party Size</dt>
                        <dd class="col-sm-8" id="modalPartySize"></dd>

                        <dt class="col-sm-4">Table</dt>
                        <dd class="col-sm-8" id="modalTable"></dd>

                        <dt class="col-sm-4">Time</dt>
                        <dd class="col-sm-8" id="modalTime"></dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8"><span class="status-badge" id="modalStatusBadge"></span></dd>
                    </dl>
                    <div id="statusActionButtons" class="d-flex flex-column gap-2"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <form id="statusUpdateForm" method="post" asp-controller="Employee" asp-action="UpdateStatus" asp-route-returnTo="Calendar">
        @Html.AntiForgeryToken()
        <input type="hidden" name="reservationId" id="statusReservationId" />
        <input type="hidden" name="statusId" id="statusIdField" />
    </form>
</div>

<style>
    /* Event status colors */
    .event-confirmed { 
        background-color: #198754 !important; 
        border-color: #198754 !important; 
    }
    .event-seated { 
        background-color: #0dcaf0 !important; 
        border-color: #0dcaf0 !important; 
    }
    .event-completed { 
        background-color: #6c757d !important; 
        border-color: #6c757d !important; 
    }

    /* Legend badges */
    .event-confirmed-badge { background-color: #198754; color: #fff; }
    .event-seated-badge { background-color: #0dcaf0; color: #000; }
    .event-completed-badge { background-color: #6c757d; color: #fff; }

    /* Modal theming */
    .reservation-modal .modal-content {
        /* Use a solid themed surface color to avoid see-through effect */
        background-color: var(--bg-card);
        color: var(--text-primary);
        border: 1px solid var(--border-primary);
        box-shadow: var(--shadow-lg);
    }

    .reservation-modal .modal-header,
    .reservation-modal .modal-footer {
        border-color: var(--border-primary);
    }

    .reservation-modal .modal-title {
        color: var(--text-heading);
    }

    .reservation-modal dt {
        color: var(--text-secondary);
    }

    .reservation-modal dd {
        color: var(--text-primary);
    }

    /* Horizontal scroll for tables */
    .calendar-scroll-wrapper {
        width: 100%;
        overflow-x: auto;
    }

    /* Make table columns wider so fewer fit on screen at once */
    #reservationCalendar .fc-timegrid-cols,
    #reservationCalendar .fc-timegrid-body,
    #reservationCalendar .fc-timegrid-slots {
        min-width: 1600px; /* wide grid so fewer tables fit on screen at once */
    }

    #reservationCalendar .fc-timegrid-col {
        min-width: 220px; /* make each table column visually larger */
    }

    /* Increase row height and event text size for readability */
    #reservationCalendar .fc-timegrid-slot {
        height: 3rem;
    }

    #reservationCalendar .fc-event {
        font-size: 1rem;
        padding: 6px 10px;
    }

    /* Make table headers larger */
    #reservationCalendar .fc-col-header-cell-cushion {
        padding: 0.5rem 0.75rem;
        font-size: 0.95rem;
    }
</style>

@section Scripts {
    <script>
        // Parse data from controller
        const resourcesJsonString = '@Html.Raw(ViewData["ResourcesJson"])';
        const eventsJsonString = '@Html.Raw(ViewData["EventsJson"])';
        const businessDayStart = '@(ViewData["BusinessDayStart"] ?? "09:00:00")';
        const businessDayEnd = '@(ViewData["BusinessDayEnd"] ?? "22:00:00")';
        const selectedDateStr = '@selectedDate.ToString("yyyy-MM-dd")';

        // Debug logging
        console.log('Business hours:', businessDayStart, 'to', businessDayEnd);
        console.log('Selected date:', selectedDateStr);
        console.log('Resources JSON:', resourcesJsonString);
        console.log('Events JSON:', eventsJsonString);

        let resourcesData, eventsData;

        try {
            resourcesData = JSON.parse(resourcesJsonString);
            eventsData = JSON.parse(eventsJsonString);
            console.log('Parsed resources:', resourcesData);
            console.log('Parsed events:', eventsData);
        } catch (e) {
            console.error('JSON parsing error:', e);
        }

        document.addEventListener('DOMContentLoaded', function() {
            const calendarEl = document.getElementById('reservationCalendar');
            const modalElement = document.getElementById('reservationDetailModal');
            const reservationModal = new bootstrap.Modal(modalElement);
            let currentReservationId = null;

            if (!calendarEl) {
                console.error('Calendar element not found!');
                return;
            }

            try {
                var calendar = new FullCalendar.Calendar(calendarEl, {
                    schedulerLicenseKey: 'GPL-My-Project-Is-Open-Source',
                    initialView: 'resourceTimeGridDay',
                    initialDate: selectedDateStr,

                    resources: resourcesData,
                    events: eventsData,

                    headerToolbar: {
                        left: 'today',
                        center: 'title',
                        right: ''
                    },
                    customButtons: {
                        today: {
                            text: 'Today',
                            click: function() { calendar.today(); }
                        }
                    },
                    resourceLabelDidMount: function(info) {
                        var capacity = info.resource.extendedProps.capacity;
                        if (capacity) {
                            info.el.setAttribute('title', 'Capacity: ' + capacity);
                        }
                    },

                    slotMinTime: businessDayStart,
                    slotMaxTime: businessDayEnd,
                    slotDuration: '00:30:00',
                    height: 700, // make calendar itself taller for better readability
                    allDaySlot: false,
                    resourceOrder: 'order',

                    eventClick: function(info) {
                        var event = info.event;
                        var resource = event.getResources()[0];
                        currentReservationId = event.id;

                        document.getElementById('modalGuestName').textContent = event.title;
                        document.getElementById('modalPartySize').textContent = event.extendedProps.partySize;
                        document.getElementById('modalTable').textContent = resource ? resource.title : 'N/A';
                        document.getElementById('modalTime').textContent =
                            event.start.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) +
                            ' - ' +
                            event.end.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                        document.getElementById('modalStatusBadge').textContent = event.extendedProps.status;

                        renderStatusButtons(event.extendedProps.status, event.extendedProps.isWalkIn);

                        reservationModal.show();
                    },

                    eventDidMount: function(info) {
                        var className = info.event.extendedProps.className || info.event.classNames[0];
                        if (className) {
                            info.el.classList.add(className);
                        }
                    }
                });

                calendar.render();
                console.log('Calendar rendered successfully');

            } catch (e) {
                console.error('Calendar initialization error:', e);
                calendarEl.innerHTML = '<div class="alert alert-danger">Error loading calendar: ' + e.message + '</div>';
            }

            function renderStatusButtons(status, isWalkIn) {
                const container = document.getElementById('statusActionButtons');
                container.innerHTML = '';

                const actions = [];

                if (status === 'Confirmed') {
                    actions.push({
                        label: 'Mark as Seated',
                        statusId: 3,
                        confirmText: 'Are you sure the table is seated?'
                    });
                }

                if (status === 'Seated') {
                    actions.push({
                        label: 'Mark as Completed',
                        statusId: 4,
                        confirmText: 'Are you sure the reservation is completed?'
                    });
                }

                if (!isWalkIn && (status === 'Confirmed')) {
                    actions.push({
                        label: 'Mark as Cancelled',
                        statusId: 5,
                        confirmText: 'Are you sure you want to cancel this reservation?',
                        variant: 'danger'
                    });
                }

                if (actions.length === 0) {
                    container.innerHTML = '<p class="text-muted mb-0">No further actions available.</p>';
                    return;
                }

                actions.forEach(action => {
                    const btn = document.createElement('button');
                    btn.type = 'button';
                    btn.className = `btn btn-${action.variant || 'primary'}`;
                    btn.textContent = action.label;
                    btn.addEventListener('click', function () {
                        if (confirm(action.confirmText)) {
                            document.getElementById('statusReservationId').value = currentReservationId;
                            document.getElementById('statusIdField').value = action.statusId;
                            document.getElementById('statusUpdateForm').submit();
                        }
                    });
                    container.appendChild(btn);
                });
            }
        });
    </script>
}

