@{
    ViewData["Title"] = "Create Walk-In Reservation";
}

<div class="container mt-5">
    <h2 class="gold-heading">New Walk-In Customer</h2>
    <hr class="gold-hr" />

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="CreateWalkIn" method="post">
                @Html.AntiForgeryToken()
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="PartySize" class="form-label">Party Size *</label>
                        <input type="number" name="PartySize" id="PartySize" class="form-control" 
                               min="1" max="20" required />
                    </div>
                    
                    <div class="col-md-6">
                        <label for="Duration" class="form-label">Estimated Duration (minutes)</label>
                        <select name="Duration" id="Duration" class="form-select">
                            <option value="60">1 hour</option>
                            <option value="90" selected>1.5 hours</option>
                            <option value="120">2 hours</option>
                        </select>
                    </div>
                </div>

                <div class="row g-3 mt-2">
                    <div class="col-md-6">
                        <label for="GuestName" class="form-label">Guest Name (Optional)</label>
                        <input type="text" name="GuestName" id="GuestName" class="form-control" 
                               placeholder="John Doe" />
                    </div>
                    
                    <div class="col-md-6">
                        <label for="GuestPhone" class="form-label">Phone (Optional)</label>
                        <input type="tel" name="GuestPhone" id="GuestPhone" class="form-control" 
                               placeholder="+1 555 123 4567" />
                    </div>
                </div>

                <div class="mt-3">
                    <label for="Notes" class="form-label">Notes (Optional)</label>
                    <textarea name="Notes" id="Notes" class="form-control" rows="3" 
                              placeholder="Special requests, seating preferences..."></textarea>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Reservations" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-confirm">Create Walk-In</button>
                </div>
            </form>
        </div>
    </div>
</div>
