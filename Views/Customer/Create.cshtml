@model FYP.Models.Customer
@{
    ViewData["Title"] = "Customer Registration";
}

<div class="center-container">
    <div class="register-form">
        <h2>@ViewData["Title"]</h2>
        <hr />

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PreferredLanguage"></label>
                <select asp-for="PreferredLanguage" class="form-control">
                    <option value="English">English</option>
                    <option value="French">French</option>
                </select>
                <span asp-validation-for="PreferredLanguage" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PictureBytes">Profile Picture</label>
                <input asp-for="PictureBytes" type="file" class="form-control" />
                <span asp-validation-for="PictureBytes" class="text-danger"></span>
            </div>

            <!-- Hidden fields -->
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="UpdatedBy" />
            <input type="hidden" asp-for="UpdatedAt" />
            <input type="hidden" asp-for="ApplicationUserId" />
            <button type="submit" class="btn btn-primary">Register Customer</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}