    @page
    @model FYP.Areas.Identity.Pages.Account.RegisterModel
    @{
        ViewData["Title"] = "Register";
    }

    <div class="center-container">
        <div class="register-form">
            <h2 class="gold-heading">@ViewData["Title"]</h2>
            <hr class="gold-hr" />

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Email -->
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="Input.Email">Email</label>
                    <input class="form-control" asp-for="Input.Email" autocomplete="username" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="Input.Password">Password</label>
                    <input class="form-control" asp-for="Input.Password" type="password" autocomplete="new-password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-group mb-4">
                    <label class="form-label" asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <input class="form-control" asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Role Selection -->
                <div class="form-group mb-4">
                    <label class="form-label fw-semibold">Register as:</label>
                    <div class="form-radio-group">
                        <label class="form-radio">
                            <input class="form-check-input" type="radio" asp-for="Input.Role" value="Customer" checked />
                            Customer
                        </label>
                        <label class="form-radio">
                            <input class="form-check-input" type="radio" asp-for="Input.Role" value="Employee" />
                            Employee
                        </label>
                    </div>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-actions">
                    <button id="registerSubmit" type="submit" class="btn btn-confirm">Register</button>
                </div>

                <!-- Login Link -->
                <div class="text-center mt-3">
                    <a asp-page="./Login" class="gold-link">Already have an account? Log in</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }