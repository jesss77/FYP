@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
    Layout = "~/Views/Shared/_Layout.cshtml"; // use site layout so theme variables and styles apply
}

<div class="center-container auth-page">
    <div class="register-form" style="max-width:520px;">
        <h1 class="gold-heading" style="text-align:center;">@ViewData["Title"]</h1>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <p style="color:var(--text-secondary); text-align:center; margin-bottom:var(--spacing-md);">You are currently signed in. Click below to sign out of your account.</p>

            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-flex justify-content-between align-items-center">
                @Html.AntiForgeryToken()
                <div></div>
                <div class="d-flex gap-2">
                    <a asp-page="/Account/Manage/Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-confirm">Log out</button>
                </div>
            </form>
        }
        else
        {
            <p style="color:var(--text-secondary); text-align:center;">You have successfully logged out of the application.</p>
            <div style="text-align:center; margin-top:var(--spacing-lg);">
                <a href="@Url.Page("/Index")" class="btn btn-confirm">Return to home</a>
            </div>
        }
    </div>
</div>
