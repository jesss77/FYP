@page
@model FYP.Areas.Identity.Pages.Account.ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-card-top-border"></div>
            <div class="auth-card-content">
                <!-- Brand Header -->
                <div class="auth-brand">
                    <svg class="brand-icon" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg" style="width: 3rem; height: 3rem;">
                        <circle cx="32" cy="32" r="30" fill="currentColor" opacity="0.15" />
                        <path d="M20 14c.6 0 1 .4 1 1v18.5c0 3.9 2.6 6.7 5.2 7.9V14.9c0-.5.4-.9.9-.9h.1c.5 0 .9.4.9.9v26.1c0 .5.4.9.9.9h.1c.5 0 .9-.4.9-.9V14.9c0-.5.4-.9.9-.9h.1c.5 0 .9.4.9.9v26.5c1.9-1.5 3.2-4.1 3.2-7.9V15c0-.6.4-1 1-1s1 .4 1 1v18.5c0 5.7-3.1 9.3-7.2 10.6v6.9c0 .6-.4 1-1 1h-2c-.6 0-1-.4-1-1v-6.9c-4.1-1.3-7.2-4.9-7.2-10.6V15c0-.6.4-1 1-1Zm24.1 6.2c-2.2 0-4 1.8-4 4v12.4c0 2.7 1.6 5.1 4 6.2v6.6c0 .6.4 1 1 1h2c.6 0 1-.4 1-1v-6.6c2.4-1.1 4-3.5 4-6.2V24.2c0-2.2-1.8-4-4-4-1.1 0-2 .4-2.8 1.2-.8-.8-1.7-1.2-2.8-1.2Z" fill="currentColor" />
                    </svg>
                    <span class="brand-text">Fine O Dine</span>
                </div>

                <h1 class="auth-title">Resend Confirmation Email</h1>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success" style="margin-bottom: var(--spacing-lg); border-radius: var(--radius-md); padding: var(--spacing-md); background: rgba(46, 204, 113, 0.1); border: 1px solid #2ECC71; color: #27AE60;">
                        @TempData["Success"]
                    </div>
                }

                <form method="post">
                    <div asp-validation-summary="All" class="text-danger" role="alert"></div>

                    <div class="form-group">
                        <label class="form-label" asp-for="Email">Email Address</label>
                        <input asp-for="Email" class="form-input" autocomplete="email" 
                               placeholder="Enter your email address" aria-required="true" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-submit">Resend Confirmation Email</button>

                    <p class="auth-footer">
                        Remember your password? <a asp-page="./Login" class="link-amber">Back to Login</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}