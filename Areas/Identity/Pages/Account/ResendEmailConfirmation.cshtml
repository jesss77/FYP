@page
@model FYP.Areas.Identity.Pages.Account.ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
    // Apply the class that creates the dark overlay effect
    Layout = "_Layout"; // Assuming your layout includes the body and the .background-overlay
}

<div class="background-overlay"></div>

<div class="center-container">
    <div class="register-form">

        <h2 class="gold-heading">@ViewData["Title"]</h2>
        <hr class="gold-hr" />

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success mt-3" role="alert">
                @TempData["Success"]
            </div>
        }

        <form method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-4">
                <label class="form-label" asp-for="Email">Email Address</label>
                <input asp-for="Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-confirm">Resend Email</button>
            </div>

            <div class="text-center mt-3">
                <a asp-page="./Login" class="gold-link">Return to Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}