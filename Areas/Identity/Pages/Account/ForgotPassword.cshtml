@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="email-confirmation-container">
    <div class="email-confirmation-card">
        <span class="material-symbols-outlined email-confirmation-icon">mark_email_unread</span>
        <h1>Reset your password</h1>
        <p class="lead">Enter the email address associated with your account and we'll send you a link to reset your password.</p>

        <div style="margin-top: var(--spacing-md);">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <form method="post" novalidate>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div style="display:flex; gap:var(--spacing-md); justify-content:center;">
                    <button type="submit" class="btn btn-primary">Send reset email</button>
                    <a class="btn btn-secondary" asp-page="/Account/Login" asp-area="Identity">Cancel</a>
                </div>
            </form>

            <p style="margin-top: var(--spacing-xl); padding-top: var(--spacing-lg); border-top: 1px solid var(--border-primary);">
                Don't have an account? <a asp-page="/Account/Register" asp-area="Identity" class="link-amber">Create an account</a>
            </p>
        </div>

        <div style="margin-top: var(--spacing-2xl); display: flex; gap: var(--spacing-md); justify-content: center; flex-wrap: wrap;">
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index" asp-area="">Return Home</a>
        </div>
    </div>
</div>

<style>
    .lead { font-size: 1.125rem; line-height: 1.6; }
    .email-confirmation-container { display:flex; justify-content:center; padding:2rem 1rem; }
    .email-confirmation-card { max-width:720px; width:100%; background:#fff; border-radius:8px; padding:2rem; box-shadow:0 6px 20px rgba(0,0,0,0.06); text-align:center; }
    .email-confirmation-icon { font-size:64px; color:var(--amber); }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
