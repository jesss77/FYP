@page
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<FYP.Localization.SharedResource> L
@{
    ViewData["Title"] = L["Pending Approval"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="email-confirmation-container">
    <div class="email-confirmation-card">
        <span class="material-symbols-outlined email-confirmation-icon">pending_actions</span>
        <h1>@L["Pending Confirmation"]</h1>
        <p class="lead">
            @L["Your account has been created and is awaiting your verification by email."]
        </p>        
        <div style="margin-top: var(--spacing-2xl); display: flex; gap: var(--spacing-md); justify-content: center; flex-wrap: wrap;">
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index" asp-area="">@L["Return Home"]</a>
        </div>the 
    </div>
</div>

<style>
    .alert {
        border-radius: var(--radius-md);
        padding: var(--spacing-md);
        font-size: 0.875rem;
    }
    
    .lead {
        font-size: 1.125rem;
        line-height: 1.6;
    }
</style>
