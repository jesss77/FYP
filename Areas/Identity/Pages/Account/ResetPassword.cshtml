@page
@model FYP.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="email-confirmation-container">
    <div class="email-confirmation-card">
        <span class="material-symbols-outlined email-confirmation-icon">lock_reset</span>
        <h1>Reset your password</h1>

        <p class="lead">Enter a new password for your account below.</p>

        <hr />

        <div class="row justify-content-center">
            <div class="col-md-8">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <input asp-for="Input.Code" type="hidden" />
                    <input asp-for="Input.Email" type="hidden" />

                    <div class="form-group mb-4">
                        <label asp-for="Input.Password" class="form-label-text">New Password</label>
                        <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Enter your new password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Input.ConfirmPassword" class="form-label-text">Confirm Password</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Confirm your new password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div style="display:flex; gap:var(--spacing-lg); justify-content:center; margin-top:var(--spacing-2xl);">
                        <button type="submit" class="btn btn-primary">Reset Password</button>
                        <a class="btn btn-secondary" asp-page="/Account/Login" asp-area="Identity">Cancel</a>
                    </div>
                </form>
            </div>
        </div>

        <div style="margin-top: var(--spacing-2xl); display: flex; gap: var(--spacing-md); justify-content: center; flex-wrap: wrap;">
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index" asp-area="">Return Home</a>
        </div>
    </div>
</div>

<style>
    .lead {
        font-size: 1.125rem;
        line-height: 1.6;
    }

    .email-confirmation-container {
        display: flex;
        justify-content: center;
        padding: 2rem 1rem;
    }

    .email-confirmation-card {
        max-width: 720px;
        width: 100%;
        background: var(--bg-card);
        border-radius: var(--radius-lg);
        padding: 2rem;
        box-shadow: var(--shadow-lg);
        text-align: center;
    }

    .email-confirmation-icon { 
        font-size: 64px; 
        color: var(--amber, #D4AF37); 
    }
    
    .email-confirmation-card h1 { 
        color: var(--amber, #D4AF37); 
    }

    /* Form styling with global vars */
    .form-group {
        margin-bottom: var(--spacing-xl);
        text-align: left;
    }

    .form-label-text {
        display: block;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: var(--spacing-md);
        font-size: 0.9375rem;
        text-align: left;
    }

    .form-control {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid var(--border-primary);
        border-radius: var(--radius-md);
        font-size: 1rem;
        transition: all var(--transition-base);
        background: var(--bg-secondary);
        color: var(--text-primary);
        font-family: inherit;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--amber, #D4AF37);
        box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.2);
        background: var(--bg-card);
    }

    .form-control::placeholder {
        color: var(--text-muted);
        opacity: 0.6;
    }

    /* Dark mode support */
    [data-bs-theme="dark"] .email-confirmation-card,
    html[data-bs-theme="dark"] .email-confirmation-card {
        background: rgba(33, 37, 41, 0.95);
        color: var(--text-primary);
    }

    [data-bs-theme="dark"] .form-label-text,
    html[data-bs-theme="dark"] .form-label-text {
        color: var(--text-primary);
    }

    [data-bs-theme="dark"] .form-control,
    html[data-bs-theme="dark"] .form-control {
        background-color: var(--bg-secondary);
        border-color: var(--border-primary);
        color: var(--text-primary);
    }

    [data-bs-theme="dark"] .form-control:focus,
    html[data-bs-theme="dark"] .form-control:focus {
        background-color: var(--bg-card);
        border-color: var(--amber, #D4AF37);
        color: var(--text-primary);
    }

    [data-bs-theme="dark"] .form-control::placeholder,
    html[data-bs-theme="dark"] .form-control::placeholder {
        color: var(--text-muted);
        opacity: 0.5;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
